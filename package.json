{
  "name": "toy-shop-billing-system",
  "version": "1.0.0",
  "description": "Desktop billing system for toy shops with Electron, React, Node.js and SQLite",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "node backend/src/server.js",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "nodemon backend/src/server.js",
    "frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run backend\" \"electron .\"",
    "electron-build": "cd frontend && npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "nodemon": "^3.0.1",
    "react-scripts": "5.0.1"
  },
  "build": {
    "appId": "com.toyshop.billing",
    "files": [
      "build/**/*",
      "backend/**/*",
      "main.js"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "keywords": [
    "billing",
    "pos",
    "inventory",
    "toy-shop"
  ],
  "author": "",
  "license": "MIT"
}
